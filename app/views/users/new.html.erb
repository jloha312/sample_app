<h2>Sign up</h2>

<%= form_for(@user) do |f| %>
	<%= render 'shared/error_messages' %>

	<div class="field">
		<%= f.label :name %><br />
		<%= f.text_field :name %>
		<p></p>
	</div>

	<div class="field">
		<%= f.label :email %><br />
		<%= f.text_field :email %>
		<p>Example: john@gmail.com</p>
	</div>
	<div class="field">
		<%= f.label :password %><br />
		<%= f.password_field :password %>
		<p>Minimum of 6 characters</p>
	</div>
	<div class="field">
		<%= f.label :password_confirmation, "Password Confirmation" %><br />
		<%= f.password_field :password_confirmation %>
		<p>Minimum of 6 characters<p>
	</div>
	
		<%= f.submit "Sign up", :id => 'actions' do -%>
		<% end %>
	
<% end %>